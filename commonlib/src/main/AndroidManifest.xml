<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.module.common">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Bugly SDK 需要的权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!-- Bugly SDK 需要的权限 -->

    <application
        android:allowBackup="false"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppFadeTheme"
        tools:targetApi="n">
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".ui.ModifyPasswordActivity" />
        <activity android:name=".ui.WebViewActivity" />
        <activity
            android:name="com.module.app.wxapi.WXPayEntryActivity"
            android:exported="true"
            android:label="微信支付"
            android:launchMode="singleTask"
            android:taskAffinity="com.module.app"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- 适配刘海屏 -->
        <meta-data
            android:name="android.notch_support"
            android:value="true" />
        <!-- 全面屏-->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />

    </application>

    <queries>
        <!-- 微信授权登录、分享、支付适配Android 11 -->
        <package android:name="com.tencent.mm" />
        <!-- 支付宝支付 -->
        <package android:name="com.eg.android.AlipayGphone" />
        <package android:name="hk.alipay.wallet" />
    </queries>

</manifest>